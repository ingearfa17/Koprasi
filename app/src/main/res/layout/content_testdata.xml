<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.project.rezasaputra.koprasi.Activity.testdata">

    <View
        android:id="@+id/VerticalLine"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="#aaa" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="#ffffff"
        android:id="@+id/username_layout"
        android:layout_below="@id/VerticalLine">

        <TextView
            android:id="@+id/usernames"
            android:text="Nama"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/name"
            android:text="test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/next1"
            android:layout_toStartOf="@+id/next1" />
        <ImageView
            android:id="@+id/next1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/usernames"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>
    <View
        android:id="@+id/VerticalLine1"
        android:layout_width="match_parent"
        android:layout_below="@id/username_layout"
        android:layout_height="3dp"
        android:background="#aaa" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="#ffffff"
        android:id="@+id/useremail_layout"
        android:layout_below="@id/VerticalLine1">

        <TextView
            android:id="@+id/useremails"
            android:text=" Email"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/role"
            android:text="test"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/next2"
            android:layout_toStartOf="@+id/next2" />
        <ImageView
            android:id="@+id/next2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/useremails"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>
    <View
        android:id="@+id/VerticalLine2"
        android:layout_width="match_parent"
        android:layout_below="@id/useremail_layout"
        android:layout_height="3dp"
        android:background="#aaa" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:background="#ffffff"
        android:id="@+id/changepass_layout"
        android:layout_below="@id/VerticalLine2">

        <TextView
            android:id="@+id/userchanges"
            android:text="Alamat"
            android:paddingLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_height="wrap_content"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/useralamat"
            android:text="alamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16dp"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/next3"
            android:layout_toStartOf="@+id/next3" />
        <ImageView
            android:id="@+id/next3"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignBottom="@+id/userchanges"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            />

    </RelativeLayout>
    <View
        android:id="@+id/VerticalLine3"
        android:layout_width="match_parent"
        android:layout_below="@id/changepass_layout"
        android:layout_height="3dp"
        android:background="#aaa" />

    <Button
        android:id="@+id/btnLogout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textAllCaps="false"
        android:textSize="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="false"
        />
</RelativeLayout>